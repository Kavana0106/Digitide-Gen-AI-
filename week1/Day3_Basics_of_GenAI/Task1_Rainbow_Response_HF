#Poem.py
from transformers import pipeline

def main():
    # Load a text-generation pipeline with a small model
    generator = pipeline("text-generation", model="declare-lab/flan-alpaca-base")

    prompt = "Explain how rainbows are formed"

    # Generate text
    output = generator(
        prompt,
        max_new_tokens=1000,
        do_sample=True, # creativity
        temperature=0.8,
        top_p=0.9
    )

    print("=== Generated Poem ===\n")
    print(output[0]["generated_text"])

if __name__ == "__main__":
    main()
